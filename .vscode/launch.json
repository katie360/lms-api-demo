{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,               // Ensures that TypeScript debugging works
      "trace": true                     // Optional: enables tracing of debug info
    }
  ]
}
